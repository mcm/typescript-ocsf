{
  "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
  "files": {
    "ignore": ["src/v1_5/**", "src/v1_6/**", "src/v1_7/**"]
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineEnding": "lf",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  }
}
